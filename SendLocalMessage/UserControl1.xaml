<UserControl x:Class="SendLocalMessage.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SendLocalMessage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450" Width="450" Height="300">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        <TextBox x:Name="textfield" FontSize="14" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="200" BorderThickness="0" IsEnabled="False" Text="" />
        <Button x:Name="okbutton" Content=" Okej " HorizontalAlignment="Left" Margin="201,214,0,0" VerticalAlignment="Top" Click="Okbutton_Click" Background="IndianRed"/>
        <Image x:Name="kommunlogo" HorizontalAlignment="Left" Margin="270,161,0,0" VerticalAlignment="Top" Height="72" Source="/mtg-logo.jpg" Width="141" />
    </Grid>
</UserControl>
