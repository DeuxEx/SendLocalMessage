             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SendLocalMessage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450" Width="450" Height="300">
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="450">
        <TextBox x:Name="textfield" FontSize="14" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="200" BorderThickness="0" IsEnabled="False" Text="" />
        <Button x:Name="okbutton" Content=" Okej " HorizontalAlignment="Left" Margin="200,220,0,0" VerticalAlignment="Top" Click="Okbutton_Click"/>
        <Image HorizontalAlignment="Left" Height="67" Margin="314,128,0,0" VerticalAlignment="Top" Width="76" Source="/mtg-logo.jpg" />
    </Grid>
</UserControl>
