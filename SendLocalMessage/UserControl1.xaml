<UserControl x:Class="SendLocalMessage.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SendLocalMessage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450" Width="450" Height="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="450">
        <TextBox x:Name="textfield" FontSize="14" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="200" BorderThickness="0" IsEnabled="False" Text="Angående Net-ID som finns i din dator. Programvaran kommer att avinstalleras den 30/6 och om du då har behov av att fortsatt använda det så ombeds du kontakta it-support så hjälper vi till att installera det nya E-id på din dator." />
        <Button x:Name="okbutton" Content="Okej" HorizontalAlignment="Left" Margin="200,220,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
